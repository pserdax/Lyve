<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lyve" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/black_dinner</item>
        <item name="colorOnPrimary">@color/textColorSecondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/textColorSecondary</item>
        <item name="colorSecondaryVariant">@color/textColorSecondary</item>
        <item name="colorOnSecondary">@color/black_dinner</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Font family. -->
        <item name="fontFamily">@font/poppins_regular</item>
        <!-- Text color. -->
        <item name="android:textColor">@color/black_dinner</item>
        <!-- Text size -->
        <item name="android:textSize">@dimen/twelve</item>
        <!-- Bottom sheet -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <!-- Main Button. -->
    <style name="Buttons.MainAndDisabled" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="strokeColor">@color/black_dinner</item>
        <item name="rippleColor">@color/baby_powder</item>
        <item name="android:textColor">@color/baby_powder</item>
        <item name="backgroundTint">@color/black_dinner</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Secondary Button. -->
    <style name="Buttons.SecondaryNoDisabled" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">12sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="elevation">2dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/black_dinner</item>
        <item name="android:textColor">@color/black_dinner</item>
        <item name="backgroundTint">@color/baby_powder</item>
        <item name="strokeColor">@color/black_dinner</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Alternative Button. -->
    <style name="Buttons.Alternative" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="elevation">2dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/twelve</item>
        <item name="rippleColor">@color/black_dinner</item>
        <item name="android:textColor">@color/black_dinner</item>
        <item name="backgroundTint">@color/baby_powder</item>
        <item name="strokeColor">@color/black_dinner</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Bottom sheet customizations -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <!--NAV DRAWER-->
    <style name="nav_drawer_font">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Special images -->
    <style name="specialRoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <!-- Rounded images -->
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedImageView1">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Alert dialog -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black_dinner</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

    <!-- Chip filter -->
    <style name="ThemeOverlay.MyApp.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">true</item>
    </style>

    <style name="Widget.MyApp.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_color</item>
        <item name="android:textColor">@color/black_dinner</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Chip.Choice</item>
    </style>
</resources>