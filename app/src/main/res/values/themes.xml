<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lyve" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/aquaAccent</item>
        <item name="colorPrimaryVariant">@color/black_dinner</item>
        <item name="colorOnPrimary">@color/baby_powder</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/aquaAccent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black_dinner</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Font family. -->
        <item name="fontFamily">@font/poppins_regular</item>
        <!-- Text color. -->
        <item name="android:textColor">@color/black_dinner</item>
        <!-- Text size -->
        <item name="android:textSize">@dimen/twelve</item>
    </style>

    <!-- Main Button. -->
    <style name="Buttons.MainAndDisabled" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">10dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="strokeColor">@color/black_dinner</item>
        <item name="rippleColor">@color/baby_powder</item>
        <item name="android:textColor">@color/baby_powder</item>
        <item name="backgroundTint">@color/black_dinner</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Secondary Button. -->
    <style name="Buttons.SecondaryNoDisabled" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">10sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="elevation">2dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/black_dinner</item>
        <item name="android:textColor">@color/black_dinner</item>
        <item name="backgroundTint">@color/baby_powder</item>
        <item name="strokeColor">@color/black_dinner</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>