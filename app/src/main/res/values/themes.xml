<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lyve" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/black_dinner</item>
        <item name="colorOnPrimary">@color/baby_powder</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black_dinner</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Font family. -->
        <item name="fontFamily">@font/poppins_regular</item>
        <!-- Text color. -->
        <item name="android:textColor">@color/black_dinner</item>
        <!-- Text size -->
        <item name="android:textSize">@dimen/twelve</item>
        <!-- Bottom sheet -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <!-- Main Button. -->
    <style name="Buttons.MainAndDisabled" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">@dimen/field_padding</item>
        <item name="cornerRadius">@dimen/rounded_corners</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="strokeColor">@color/color_secondary</item>
        <item name="rippleColor">@color/black_dinner</item>
        <item name="android:textColor">@color/black_dinner</item>
        <item name="backgroundTint">@color/color_secondary</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Secondary Button. -->
    <style name="Buttons.SecondaryNoDisabled" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">@dimen/field_padding</item>
        <item name="cornerRadius">@dimen/rounded_corners</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="elevation">2dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/black_dinner</item>
        <item name="android:textColor">@color/black_dinner</item>
        <item name="backgroundTint">@color/baby_powder</item>
        <item name="strokeColor">@color/black_dinner</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Bottom sheet customizations -->
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>
</resources>